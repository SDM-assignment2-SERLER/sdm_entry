<!DOCTYPE html>
<html>
<head>
  <title>SERLER</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="row">
    <div class="col-md-12">
      <% if current_user %>
            <%= link_to image_tag("logo.png", :size => "177x61"), root_path %>
            <div style="float:right">
            Welcome:<%= current_user.email%>
            <%= link_to 'Sign out', destroy_user_session_path, method: 'delete' %>
          </div>
      <% else %>
          <%= image_tag("logo.png", :size => "177x61") %>
              <p class="text text-warning" style="float: right">
                Welcome! Please <%= link_to 'Login', new_user_session_path %> to continue
              </p>
      <%end%>
    </div>
  </div>
  <div class="container">
    <%= yield %>
  </div>
</body>
</html>
